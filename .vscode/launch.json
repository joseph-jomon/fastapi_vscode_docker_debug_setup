{
    "configurations": [
        
        {
            "name": "Python Debugger: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            //"preLaunchTask": "Docker Compose Up",
            "postDebugTask": "Docker Compose Down",  // Runs after debugger stops
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/app_folder/app",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,

        },
        
    ]
}